{
  "manifest_version": 3,
  "name": "Gmail Activity Tracker for ActivityWatch",
  "version": "1.0",
  "description": "Tracks Gmail activity (reading inbox, reading emails, composing) and pushes events to ActivityWatch.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gmail Activity Tracker",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}